{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "types/"],
    "paths": {
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"]
    }
  }
}
