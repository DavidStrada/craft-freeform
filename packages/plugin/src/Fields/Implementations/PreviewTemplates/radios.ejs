<style>
    .options-one-line {
        display: inline-block;
        margin-right: 10px;
    }
</style>

<% generatedOptions.forEach(function(option) { %>

    <% if (oneLine) { %><span class="options-one-line"><% } else { %><div><% } %>

        <input type="radio"
               class="radio"
               <% if (option.value === defaultValue) { %>checked="checked"<% } %>
        />
        <label for=""><%= option.label %></label>

    <% if (oneLine) { %></span><% } else { %></div><% } %>

<% }) %>
