{% import "_includes/forms" as forms %}

{% set value = submission[field.handle].value %}

{% set checkboxInput %}
    {{ forms.checkboxField({
        label: field.label,
        name: field.handle,
        id: field.handle,
        checked: value ? true : false,
        value: field.defaultValue,
    }) }}
{% endset %}

{{ forms.field({
    label: null,
    class: "checkbox-field",
    errors: submission.errors(field.handle),
    required: field.required,
}, checkboxInput) }}
