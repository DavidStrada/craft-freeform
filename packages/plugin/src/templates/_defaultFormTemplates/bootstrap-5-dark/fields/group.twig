{% import "freeform/_defaultFormTemplates/bootstrap-5/_row.twig" as rowMacro %}

{% do field.setParameters({
    attributes: {
        input: { "=class": "form-check-input" },
        label: { class: "form-check-label" },
    }
}) %}

<div{{ field.attributes.container }}>
    {{ field.renderLabel }}
    {{ field.renderInstructions }}

    <div class="card">
        <div class="card-body">
            {% for row in field.layout %}
                {{ rowMacro.render(row, form) }}
            {% endfor %}
        </div>
    </div>
</div>
