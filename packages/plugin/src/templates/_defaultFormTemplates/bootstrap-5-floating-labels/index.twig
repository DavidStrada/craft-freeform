{# Pull in CSS and field rendering #}
<style>
{% include "freeform/_defaultFormTemplates/bootstrap-5-floating-labels/_main.css" %}
</style>
{% import "freeform/_defaultFormTemplates/bootstrap-5-floating-labels/_row.twig" as rowMacro %}

{# Render the opening form tag #}
{{ form.renderTag({
    attributes: {
        row: { class: "row" },
        success: { class: "alert alert-success" },
        errors: { class: "alert alert-danger" },
        "@buttons": {
            container: {},
            column: {},
            buttonWrapper: {},
            submit: { class: "btn btn-primary" },
            back: { class: "btn btn-secondary" },
            save: { class: "btn btn-primary" },
        },
        "@fields": {
            container: { class: "mb-3 col-12" },
            input: { 
                novalidate: true,
                class: "form-control"
            },
            label: { class: "mb-1" },
            instructions: { class: "form-text text-muted mt-1" },
            error: { class: "list-unstyled m-0 fst-italic text-danger" },
            ":required": {
                label: {
                    "+class": "required"
                },
            },
            ":errors": {
                input: {
                    "+class": "is-invalid"
                },
            },
            "@text, @textarea, @email, @website, @confirm, @regex, @phone, @datetime, @dropdown, @multiple-select, @number, @password, @file-dnd, @signature, @credit-card": {
                container: { "+class": "form-floating" },
            },
            "@group": {
                label: {
                    "+class": "group-label",
                }
            },
            "@checkbox" : {
                input: {
                    "=class": "form-check-input checkbox"
                },
                label: {
                    "+class": "form-check-label"
                }
            },
            "@dropdown" : {
                input: {
                    "+class": "form-select"
                }
            },
            "@file" : {
                input: {
                    "+class": "form-control-file"
                }
            },
            "@signature": {
                input: {
                    "-class": "form-control",
                    "+class": "btn btn-light"
                }
            }
        }
    }
}) }}

{# Pull in JS overrides #}
<script>
{% include "freeform/_defaultFormTemplates/bootstrap-5-floating-labels/_main.js" %}
</script>

{# Success and error message handling for non-AJAX forms #}
{% if not form.settings.ajax %}
    {% if form.submittedSuccessfully %}
        <div{{ form.attributes.success }}>
            {{ form.settings.successMessage | t('freeform') }}
        </div>
    {% endif %}
    {% if form.hasErrors %}
        <div{{ form.attributes.errors }}>
            {{ form.settings.errorMessage | t('freeform') }}

            {% if form.errors|length %}
                <ul class="mb-0">
                    {% for error in form.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endif %}
{% endif %}

{# Render page tabs if multi-page #}
{% if form.pages|length > 1 %}
    <ul class="nav nav-tabs mb-4">
        {% for page in form.pages %}
            <li class="nav-item">
                <span class="nav-link{{ form.currentPage.index == page.index ? ' fw-bold active' : ' disabled' }}">
                    {{ page.label }}
                </span>
            </li>
        {% endfor %}
    </ul>
{% endif %}

{# Display form field rows and columns #}
{{ rowMacro.render(form.rows, form) }}

{# Render the closing form tag #}
{{ form.renderClosingTag }}